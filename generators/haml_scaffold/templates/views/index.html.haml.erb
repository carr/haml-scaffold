%h2 Listing <%= plural_name.humanize.downcase %>
= link_to 'New <%= singular_name.humanize.downcase %>', new_<%= singular_name %>_path
- if !@<%= plural_name %>.empty?
  = will_paginate(@<%= plural_name %>)
  .<%= plural_name %>
    = render :partial => "item", :collection => @<%= plural_name %>, :as => :<%= singular_name %>
  = will_paginate(@<%= plural_name %>)
- else
  %p There are no <%= plural_name.humanize.downcase %> to show yet.

